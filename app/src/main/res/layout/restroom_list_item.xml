<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/leadingRestroomIcon"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/state_color_description"
            app:srcCompat="@drawable/ic_location" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restroomListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restroom Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restroomListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restroom Content"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/restroomDeleteCheckCircle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_check_circle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>